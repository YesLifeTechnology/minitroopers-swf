{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["esnext.disposable"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "exclude": ["dist/**/*"],
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/prisma"
    }
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true,
    "esm": true
  }
}
